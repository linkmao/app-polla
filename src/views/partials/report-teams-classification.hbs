      {{#each dataClassification}}
       <div class="card">
       <div class="card-body">
        <h5 class="card-title">Detalle de clasificaciones del grupo {{group}}</h5>
        
        <div class="row">
          <div class="col">
            <p>Orden</p>
          </div>
          <div class="col">
            <p>Equipo</p>
          </div>
        </div>
        <div class="row mb-2">
          <div class="col">
            <h5>1</h5>
          </div>
