            <img src="/img/flags/{{secondFlag}}" alt="flag" width="20%">
          </div>
          <div class="col">
            <h5>{{secondTeam}}</h5>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col">
            <h5>3</h5>
          </div>
          <div class="col">
            <img src="/img/flags/{{thirdFlag}}" alt="flag" width="20%">
          </div>
          <div class="col">
            <h5>{{thirdTeam}}</h5>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col">
            <h5>4</h5>
          </div>
          <div class="col">
            <img src="/img/flags/{{fourthFlag}}" alt="flag" width="20%">
          </div>
          <div class="col">
            <h5>{{fourthTeam}}</h5>
          </div>
        </div>
      </div>
      </div>
  {{/each}}